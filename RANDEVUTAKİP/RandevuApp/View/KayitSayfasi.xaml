<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandevuApp.KayitSayfasi"
             Title="Kullanıcı Kayıt">

    <StackLayout Padding="20"
            Spacing="15">

        <Entry x:Name="isimEntry"
                Placeholder="İsim"/>
        <Entry x:Name="soyisimEntry"
                Placeholder="Soyisim"/>
        <Entry x:Name="emailEntry"
                Placeholder="Email"
                Keyboard="Email"/>
        <Entry x:Name="sifreEntry"
                Placeholder="Şifre"
                IsPassword="True"/>
        <Entry x:Name="sifreTekrarEntry"
                Placeholder="Şifre Tekrar"
                IsPassword="True"/>

        <Button Text="Kayıt Ol"
                Clicked="OnKayitOlClicked"/>

        <Label x:Name="mesajLabel"
                TextColor="Red"
                HorizontalOptions="Center"/>

    </StackLayout>
</ContentPage>
